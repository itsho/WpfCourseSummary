<Page x:Class="WpfApplication01._03_Animation3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="_03_Animation3">
    <StackPanel>
        <Border BorderBrush="LightBlue" BorderThickness="2" Margin="5" Background="LightYellow" DockPanel.Dock="Top">

            <StackPanel>
                <TextBlock>Animations 3</TextBlock>
                <TextBlock  FontSize="8">Animations in code behind</TextBlock>
            </StackPanel>
        </Border>

        <Button Name="btnTest" Height="50" Width="300" Margin="5" Click="btnTest_Click">Button Opacity Animation (Code behind)</Button>

        <StackPanel Margin="30">
            <Border Name="objRect" Height="50" Width="300" Margin="5" MouseDown="objRect_MouseDown">
                <Border.Background>
                    <SolidColorBrush x:Name="objInnerColor" Color="Aquamarine"></SolidColorBrush>
                </Border.Background>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Click on here to start Color Animation</TextBlock>
            </Border>
        </StackPanel>
    </StackPanel>
</Page>